<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="7" 
    android:background="@drawable/payment"
    >

    <TextView 
        android:text=""
        android:layout_width="fill_parent"
    
        android:layout_height="0dp"
        android:layout_weight="1"
        
        />
    <TextView
        android:text="" 
        android:layout_width="fill_parent"
    
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical" 
    android:layout_height="0dp"
    android:layout_weight="4"
    android:weightSum="6"
        >
				
	<TableRow
        android:id="@+id/tableRow0"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:weightSum="5"
        >
    <TextView 
        android:layout_weight="1"/>

    <TextView 
        android:id="@+id/lbl_merchant" 
         android:text="@string/merchant"
         android:textColor="#ce2283"
         android:textSize="20sp"
		android:layout_gravity="bottom"
         android:layout_weight="3"
        />
    </TableRow>

	
	<TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:weightSum="5"
        >
    <TextView 
        android:layout_weight="1"/>
	
	
	<EditText
        android:id="@+id/txt_merchant"
         android:layout_height="45dp"
         android:textColor="#ce2283"
         android:textSize="15sp"
         android:layout_weight="3"
        />
	</TableRow>
		
	
	
	<TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:weightSum="5"
        >
    <TextView 
        android:layout_weight="1"/>
	
	
	<Button
        android:id="@+id/btn_submit"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/submit" 
        android:background="#ce2283"
        android:textColor="#ffffff"
        
        android:layout_weight="3"
        />
    </TableRow>
	
	
	
</TableLayout>

<TextView
        android:text=""
        android:layout_width="fill_parent"
     
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout><!-- From: file:/C:/Users/Ali%20Ahmed/AndroidStudioProjects/bKash2/app/src/main/res/layout/merchant.xml -->